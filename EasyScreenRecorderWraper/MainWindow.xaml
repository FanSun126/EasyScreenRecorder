<Window x:Class="ScreenRecoder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Easy ScreenCam" Height="244.864" Width="186" ResizeMode="NoResize">
    <Grid HorizontalAlignment="Left" Height="233" Margin="0,10,0,0" VerticalAlignment="Top" Width="154">
        <Button x:Name="BtnStart" Content="Start" HorizontalAlignment="Left" Margin="44,10,0,0" VerticalAlignment="Top" Width="75" Click="OnClick_Start"/>
        <Button x:Name="BtnStop" Content="Stop" HorizontalAlignment="Left" Margin="44,45,0,0" VerticalAlignment="Top" Width="75" Click="OnClick_Stop" IsEnabled="False"/>
        <Button x:Name="BtnConfigure" Content="Configure" HorizontalAlignment="Left" Margin="44,104,0,0" VerticalAlignment="Top" Width="75" Click="OnClick_Configure" />
        <Button Content="Exit" HorizontalAlignment="Left" Height="22" Margin="44,141,0,0" VerticalAlignment="Top" Width="75" Click="OnClick_Exit" />
    </Grid>
</Window>
